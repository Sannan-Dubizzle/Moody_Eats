<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
        xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".updatePassword">

    <EditText
        android:id="@+id/newPassword"
        style="@android:style/Widget.Holo.EditText"

        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:background="@null"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="New Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/newpasswordin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updatePasswordHeading"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/editPasswordButton"
        android:layout_width="177dp"
        android:layout_height="57dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="116dp"
        android:focusable="false"
        android:text="Reset Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/renewpasswordin" />

    <EditText
        android:id="@+id/oldPasswordin"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:clickable="false"
        android:duplicateParentState="false"
        android:editable="true"
        android:ems="10"
        android:inputType="textPassword"
        android:lines="1"
        android:outlineProvider="none"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        app:layout_constraintStart_toEndOf="@+id/oldPassword"
        app:layout_constraintTop_toBottomOf="@+id/updatePasswordHeading" />


    <EditText
        android:id="@+id/renewpassword"
        style="@android:style/Widget.Holo.EditText"
        android:layout_width="121dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:background="@null"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="Re-New Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toStartOf="@+id/renewpasswordin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPassword" />

    <EditText
        android:id="@+id/newpasswordin"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="100dp"
        android:clickable="false"
        android:duplicateParentState="false"
        android:editable="true"
        android:ems="10"
        android:inputType="textPassword"
        android:lines="1"
        android:outlineProvider="none"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        app:layout_constraintStart_toEndOf="@+id/oldPassword"
        app:layout_constraintTop_toBottomOf="@+id/updatePasswordHeading" />

    <EditText
        android:id="@+id/oldPassword"
        style="@android:style/Widget.Holo.EditText"
        android:layout_width="117dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:background="@null"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="Current Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toTopOf="@+id/newPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updatePasswordHeading"
        app:layout_constraintVertical_bias="0.548" />

    <EditText
        android:id="@+id/renewpasswordin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oldPasswordin" />

    <EditText
        android:id="@+id/updatePasswordHeading"
        android:layout_width="275dp"
        android:layout_height="122dp"
        android:layout_marginTop="84dp"
        android:background="@null"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="Moody Eats"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarupdate"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/editPasswordButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/renewpasswordin"
        app:layout_constraintVertical_bias="0.492" />


</androidx.constraintlayout.widget.ConstraintLayout>
