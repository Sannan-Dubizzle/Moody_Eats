<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        tools:context=".signup">

        <EditText
            android:id="@+id/passwordsignup"
            style="@android:style/Widget.Holo.EditText"

            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="52dp"
            android:background="@null"
            android:clickable="false"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName"
            android:text="Password"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailsignup" />

        <Button
            android:id="@+id/signupbutton"
            android:layout_width="129dp"
            android:layout_height="64dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="116dp"
            android:focusable="false"
            android:text="Signup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signuppassword" />

        <EditText
            android:id="@+id/emailinsignup"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:clickable="false"
            android:duplicateParentState="false"
            android:editable="true"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:outlineProvider="none"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text=""
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#878484"
            android:textIsSelectable="true"
            app:layout_constraintStart_toEndOf="@+id/emailsignup"
            app:layout_constraintTop_toBottomOf="@+id/SignupHeading" />

        <EditText
            android:id="@+id/namesignup"
            style="@android:style/Widget.Holo.EditText"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            android:background="@null"
            android:clickable="false"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignupHeading" />

        <EditText
            android:id="@+id/nameinsignup"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:clickable="false"
            android:duplicateParentState="false"
            android:editable="true"
            android:ems="10"
            android:inputType="text"
            android:lines="1"
            android:outlineProvider="none"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text=""
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#878484"
            android:textIsSelectable="true"
            app:layout_constraintStart_toEndOf="@+id/emailsignup"
            app:layout_constraintTop_toBottomOf="@+id/SignupHeading" />

        <EditText
            android:id="@+id/emailsignup"
            style="@android:style/Widget.Holo.EditText"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="100dp"
            android:background="@null"
            android:clickable="false"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName"
            android:text="Email"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignupHeading" />

        <EditText
            android:id="@+id/signuppassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Password"
            app:layout_constraintStart_toEndOf="@+id/passwordsignup"
            app:layout_constraintTop_toBottomOf="@+id/emailinsignup" />



        <EditText
            android:id="@+id/SignupHeading"
            android:layout_width="275dp"
            android:layout_height="122dp"
            android:layout_marginTop="84dp"
            android:background="@null"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName"
            android:text="Moody Eats"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/headings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBarsignin"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/signupbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signuppassword" />


</androidx.constraintlayout.widget.ConstraintLayout>